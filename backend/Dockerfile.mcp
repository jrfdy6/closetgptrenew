# Lightweight Dockerfile for MCP Server ONLY
# Build context is repo root, so COPY from backend/
FROM python:3.11-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY backend/requirements-mcp-minimal.txt .
RUN pip install --no-cache-dir -r requirements-mcp-minimal.txt

# Copy MCP server file
COPY backend/mcp_server.py .

# Expose port
EXPOSE 3002

# Start MCP server
CMD ["python3", "mcp_server.py"]

